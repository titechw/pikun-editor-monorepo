{
  "name": "@jarvis/monorepo",
  "version": "0.0.0",
  "description": "Ai Agent Monorepo",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "bun --filter '*' clean",
    "dev:ui": "bun --filter ai-agent-ui dev",
    "dev:features": "pnpm -r --filter './features/*' run build --watch",
    "dev:stack": "concurrently -k \"pnpm dev:features\" \"pnpm --filter '@jarvis/h5-mobile' dev\"",
    "build": "pnpm -r build",
    "build:jarvis": "pnpm --filter '@waimai/zspt-ai-jarvis' build",
    "dev": "pnpm --filter '@jarvis/h5-mobile' dev",
    "test": "bun --filter '*' test",
    "format": "pnpm --filter '@jarvis/h5-mobile' format",
    "typecheck": "pnpm --filter '@jarvis/h5-mobile' typecheck",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "prerelease": "node -e \"require('./scripts/handle-workspace-deps.js').replaceWorkspaceDeps()\"",
    "postrelease": "node -e \"require('./scripts/handle-workspace-deps.js').restoreWorkspaceDeps()\"",
    "release": "pnpm prerelease && pnpm release:only && pnpm postrelease",
    "release:only": "changeset publish",
    "release:jarvis": "bash scripts/release-jarvis.sh",
    "release:jarvis-dev": "bash scripts/release-jarvis-dev.sh",
    "new": "node generators/new.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "concurrently": "^9.1.0",
    "extract-zip": "^2.0.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.0",
    "tsup": "^8.3.0"
  },
  "dependencies": {
    "enquirer": "2.4.1"
  }
}
