{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2020",
    "sourceMap": true,
    "rootDir": "src",
    "noEmitOnError": true
  },
  "include": ["src"]
}
