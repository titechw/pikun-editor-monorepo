{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/typescript/vite-react.json",
  "compilerOptions": {
    "baseUrl": ".",
    // "rootDir": "../../",
    "paths": {
      "@pikun/*": ["../../packages/*/dist", "../../packages/*/src"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/stores/*": ["src/stores/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["dist", "node_modules", "../../packages/**/node_modules"]
}
